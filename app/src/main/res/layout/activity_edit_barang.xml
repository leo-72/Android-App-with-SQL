<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:gravity="center"
    tools:context=".EditBarang">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="EDIT BARANG"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kode Barang"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18dp"/>
        <EditText
            android:id="@+id/edKdBrg"
            android:textColor="@color/abuAbu"
            android:textStyle="bold"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan Kode Barang"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Barang"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18dp"/>
        <EditText
            android:id="@+id/edNmBrg"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan Nama Barang"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harga Beli"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18dp"/>
        <EditText
            android:id="@+id/edHrgBeli"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan Harga Beli"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harga Jual"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18dp"/>
        <EditText
            android:id="@+id/edHrgJual"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan Harga Jual"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stok Barang"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18dp"/>
        <EditText
            android:id="@+id/edStok"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan Stok Barang"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:text="Update"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:backgroundTint="@color/green"/>
        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:text="Delete"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:backgroundTint="@color/red"/>
    </LinearLayout>

</LinearLayout>